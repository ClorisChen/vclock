<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name />
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
   <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>Controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>Controller.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ModifyEmployeeInfo</servlet-name>
    <servlet-class>Controller.ModifyEmployeeInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CreateNewGuest</servlet-name>
    <servlet-class>Controller.CreateNewGuestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EDisplay</servlet-name>
    <servlet-class>Controller.EDisplayServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SearchOneGuest</servlet-name>
    <servlet-class>Controller.SearchOneGuestServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ModifyGuestInfo</servlet-name>
    <servlet-class>Controller.ModifyGuestInfoServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddtoGuestList</servlet-name>
    <servlet-class>Controller.AddtoGuestListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DisplayVisitingRecord</servlet-name>
    <servlet-class>Controller.DisplayVisitingRecordServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PushMessage</servlet-name>
    <servlet-class>Controller.PushMessageServlet</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/servlet/RegisterServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ModifyEmployeeInfo</servlet-name>
    <url-pattern>/servlet/ModifyEmployeeInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateNewGuest</servlet-name>
    <url-pattern>/servlet/CreateNewGuestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EDisplay</servlet-name>
    <url-pattern>/servlet/EDisplayServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SearchOneGuest</servlet-name>
    <url-pattern>/servlet/SearchOneGuestServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ModifyGuestInfo</servlet-name>
    <url-pattern>/servlet/ModifyGuestInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddtoGuestList</servlet-name>
    <url-pattern>/servlet/AddtoGuestListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DisplayVisitingRecord</servlet-name>
    <url-pattern>/servlet/DisplayVisitingRecordServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PushMessage</servlet-name>
    <url-pattern>/servlet/PushMessageServlet</url-pattern>
  </servlet-mapping>
</web-app>

